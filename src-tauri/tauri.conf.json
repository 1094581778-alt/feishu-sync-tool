{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "飞书数据同步工具",
  "version": "1.0.1",
  "identifier": "com.feishu.sync-tool",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5000",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../.next/standalone"
  },
  "app": {
    "windows": [
      {
        "title": "飞书数据同步工具",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' data:; font-src 'self'; connect-src 'self' https://*.feishu.cn https://open.feishu.cn"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/icon.ico"
    ],
    "publisher": "Feishu Sync Tool",
    "shortDescription": "飞书表格数据同步管理工具",
    "longDescription": "一个功能强大的飞书表格数据同步工具，支持Excel文件上传、字段匹配、批量同步等功能。",
    "category": "Productivity",
    "copyright": "Copyright © 2024",
    "license": "MIT",
    "fileAssociations": [
      {
        "ext": ["xlsx"],
        "name": "Excel文件",
        "role": "Editor"
      },
      {
        "ext": ["xls"],
        "name": "Excel文件",
        "role": "Editor"
      }
    ]
  },
  "plugins": {
    "updater": {
      "active": false
    }
  }
}
